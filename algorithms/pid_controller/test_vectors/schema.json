{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Algorithm Test Vectors",
  "description": "Shared test vector format for MATLAB and C++ equivalence testing",
  "type": "object",
  "required": ["algorithm", "version", "test_cases"],
  "properties": {
    "algorithm": {
      "type": "string",
      "description": "Algorithm name (must match directory name)"
    },
    "version": {
      "type": "string",
      "description": "Test vector format version"
    },
    "description": {
      "type": "string"
    },
    "global_tolerance": {
      "type": "object",
      "description": "Default tolerances applied when test cases don't specify their own",
      "properties": {
        "absolute": { "type": "number", "minimum": 0 },
        "relative": { "type": "number", "minimum": 0 }
      }
    },
    "test_cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "inputs", "expected_output"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
            "description": "Test case identifier (valid C++ and MATLAB identifier)"
          },
          "description": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "inputs": {
            "type": "object",
            "description": "Named inputs matching the algorithm function signature"
          },
          "expected_output": {
            "description": "Expected output value(s) â€” scalar, array, or nested array"
          },
          "tolerance": {
            "type": "object",
            "description": "Per-test-case tolerance (overrides global_tolerance)",
            "properties": {
              "absolute": { "type": "number", "minimum": 0 },
              "relative": { "type": "number", "minimum": 0 }
            }
          },
          "metadata": {
            "type": "object",
            "description": "Optional metadata (author, date, source)",
            "properties": {
              "source": { "type": "string" },
              "author": { "type": "string" },
              "created": { "type": "string", "format": "date" }
            }
          }
        }
      }
    }
  }
}
